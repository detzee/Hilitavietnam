<layout version="0.1.0">
<!--
Default layout, loads most of the pages
-->

    <default>	
    	<reference name="header">
			<block type="cms/block" name="slide">
				<action method="setBlockId"><block_id>slider</block_id></action>
			</block>
		</reference>
		<reference name="top.links">
			<action method="addLink" translate="label title">
				<label>Trang chủ</label>
				<url>/</url>
				<title>Trang chủ</title>
				<prepare>true</prepare>
				<urlParams helper="core/url/getHomeUrl"/>
				<position>1</position>
                <liParams/>
                <aParams>class="home-page"</aParams>
                <beforeText></beforeText>
                <afterText></afterText>
			</action>
			<action method="addLink" translate="label title">
				<label>Giới thiệu</label>
				<url>gioi-thieu</url>
				<title>Giới thiệu</title>
				<prepare>true</prepare>
				<urlParams helper="core/url/getHomeUrl"/>
				<position>1</position>
                <liParams/>
                <aParams>class="top-link-about-us"</aParams>
                <beforeText></beforeText>
                <afterText></afterText>
			</action>
			
			<action method="addLink" translate="label title">
				<label>Vòng bi SKF</label>
				<url>vong-bi-skf.html</url>
				<title>Vòng bi SKF</title>
				<prepare>true</prepare>
				<urlParams helper="core/url/getHomeUrl"/>
				<position>1</position>
                <liParams/>
                <aParams>class="vong-bi-skf"</aParams>
                <beforeText></beforeText>
                <afterText></afterText>
			</action>
			<action method="addLink" translate="label title">
				<label>Vòng bi FAG</label>
				<url>vong-bi-fag.html</url>
				<title>Vòng bi FAG</title>
				<prepare>true</prepare>
				<urlParams helper="core/url/getHomeUrl"/>
				<position>1</position>
                <liParams/>
                <aParams>class="vong-bi-skf"</aParams>
                <beforeText></beforeText>
                <afterText></afterText>
			</action>
			<action method="addLink" translate="label title">
				<label>Vòng bi TIMKEN</label>
				<url>vong-bi-timken.html</url>
				<title>Vòng bi TIMKEN</title>
				<prepare>true</prepare>
				<urlParams helper="core/url/getHomeUrl"/>
				<position>1</position>
                <liParams/>
                <aParams>class="vong-bi-skf"</aParams>
                <beforeText></beforeText>
                <afterText></afterText>
			</action>
			<action method="addLink" translate="label title">
				<label>Vòng bi NSK</label>
				<url>vong-bi-nsk.html</url>
				<title>Vòng bi NSK</title>
				<prepare>true</prepare>
				<urlParams helper="core/url/getHomeUrl"/>
				<position>1</position>
                <liParams/>
                <aParams>class="vong-bi-skf"</aParams>
                <beforeText></beforeText>
                <afterText></afterText>
			</action>
			
			<action method="addLink" translate="label title">
				<label>Liên hệ</label>
				<url>contacts</url>
				<title>Liên hệ</title>
				<prepare>true</prepare>
				<urlParams helper="core/url/getHomeUrl"/>
				<position>1</position>
                <liParams/>
                <aParams>class="lien-he"</aParams>
                <beforeText></beforeText>
                <afterText></afterText>
			</action>
			
			
		</reference>
		
		<reference name="right">
			<block type="cms/block"  name="online.support">
				<action method="setBlockId"><block_id>online-support</block_id></action>
			</block>
			<block type="cms/block"  name="partners">
				<action method="setBlockId"><block_id>partner</block_id></action>
			</block>
		</reference>
		
        <reference name="footer">
            <block type="cms/block" name="cms_footer_links" before="footer_links">
                <!--
                    The content of this block is taken from the database by its block_id.
                    You can manage it in admin CMS -> Static Blocks
                -->
                <action method="setBlockId"><block_id>footer_links</block_id></action>
            </block>
        </reference>
    </default>
    
    <cms_page translate="label">
        <label>CMS Pages (All)</label>
        <reference name="content">
            <block type="core/template" name="page_content_heading" template="cms/content_heading.phtml"/>
            <block type="page/html_wrapper" name="cms.wrapper" translate="label">
                <label>CMS Content Wrapper</label>
                <action method="setElementClass"><value>std</value></action>
                <block type="cms/page" name="cms_page"/>
            </block>
        </reference>
    </cms_page>

    <cms_index_index translate="label">
        <label>CMS Home Page</label>
		
    </cms_index_index>

    <cms_index_defaultindex>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="default_home_page" template="cms/default/home.phtml"/>
        </reference>
    </cms_index_defaultindex>

    <cms_index_noroute translate="label">
        <label>CMS No-Route Page</label>
    </cms_index_noroute>

    <cms_index_defaultnoroute>
        <remove name="right"/>
        <remove name="left"/>
        
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="default_no_route" template="cms/default/no-route.phtml"/>
        </reference>
    </cms_index_defaultnoroute>

</layout>
